{{extend 'layout.html'}}

<h1>Username: {{=user.username}}</h1>

<h1>Games: {{for g in user.games:}} {{=A(g.name,  _href=URL('game_list', 'view', args=g.id))}}, {{pass}}</h1>
<h1>Friends:{{for f in user.friends:}} {{=A(f.username, _href=URL('users', 'user', args=f.username))}}, {{pass}}</h1>
<h1>Groups:{{for gr in user.groups:}} {{=A(gr.group_name, _href=URL('groups', 'view', args=gr.group_name))}}, {{pass}}</h1>
<h1>About: {{=user.info}}</h1>


{{=A('Send Message', _class='btn', _href=URL('users', 'send_message', args=user.username))}}
{{=A('Front Page', _class='btn', _href=URL('.', 'front_page'))}}
{{=A('Back to Users', _class='btn', _href=URL('users', 'index'))}}
